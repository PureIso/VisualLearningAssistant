<UserControl x:Class="VLANeuralNetwork.Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Margin="0,68.5,0,51" VerticalAlignment="center">
            <TextBlock
                HorizontalAlignment="center"
                FontSize="16"
                Foreground="White"
                Text="Menu Options"
                TextWrapping="Wrap" />
            <Button
                x:Name="StartButton"
                Height="32.5"
                Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"
                Click="StartButtonClick"
                Content="Neural Network" />
            <Button
                x:Name="AboutButton"
                Height="32.5"
                Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}"
                Click="AboutButtonClick"
                Content="About" />
        </StackPanel>
        <Image
            Width="380"
            Height="262"
            HorizontalAlignment="center"
            Margin="105,8,172,61"
            VerticalAlignment="center"
            Source="Images/VLAIllustration.png"
            Stretch="Fill" />
    </Grid>
</UserControl>
