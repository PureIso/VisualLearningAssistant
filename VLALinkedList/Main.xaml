<UserControl
    x:Class="VLALinkedList.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d">

    <!-- The main Grid-->
    <Grid Height="302.96">
        <!-- The stack panel with menu items-->
        <StackPanel
            HorizontalAlignment="Left"
            VerticalAlignment="Center">

            <TextBlock
                Text="Menu Option"
                Foreground="White" />

            <Button
                x:Name="StartButton"
                Content="Linked List Illustration"
                Height="32.5"
                Click="StartButtonClick"
                Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" />

            <Button
                x:Name="AboutButton"
                Content="About"
                Height="32.5"
                Click="AboutButtonClick"
                Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" />

        </StackPanel>
        <!-- Image can be applied here-->
        <!-- Using Expression Blend-->
        <Image
            Source="/VLALinkedList;component/Images/VLAIllustration.png"
            Margin="125,8,8,8" />
    </Grid>
</UserControl>